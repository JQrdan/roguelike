{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
        "dist/**/*.[jt]s?(x)",
        "!**/*.d.ts"
    ],
    "coverageProvider": "v8",
    "testMatch": [
        "**/?(*.)+(spec|test).ts"
    ],
    "coveragePathIgnorePatterns": [
        "node_modules",
        "test-config",
        "interfaces",
        "jestGlobalMocks.ts",
        ".module.ts",
        "<rootDir>/src/app/main.ts",
        ".mock.ts"
    ]
}
